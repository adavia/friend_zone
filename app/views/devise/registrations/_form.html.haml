= simple_form_for(resource, as: resource_name, remote: true,
  url: registration_path(resource_name), html: { method: :put }) do |f|

  = f.input :current_password, required: true,
    label: false, placeholder: "Current password"
  = f.input :password, autocomplete: "off", label: false, placeholder: "Password",
    required: false
  = f.input :password_confirmation, required: false,
    label: false, placeholder: "Password confirmation"

  = f.button :submit, "Update", class: "btn btn-sm", data:{ "disable-with": "Updating.." }
