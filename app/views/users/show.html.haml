.row
  .col-md-3
    .wrapper
      .profile-img
        = image_tag user_avatar(@user), class: "img-responsive img-thumbnail"
      .profile-content
        %h3
          = @user.username
        %span.text-muted
          = @user.address
        - if current_user != @user
          .btn-toolbar{role: "toolbar", "aria-label": "User actions toolbar"}
            #profile-actions.btn-group{role: "toolbar", "aria-label": "Profile actions"}
              = render "actions", user: @user
            #profile-message.btn-group{role: "toolbar", "aria-label": "Profile message"}
              %button.btn.btn-sm.btn-default Send a message
  .col-sm-6
    .wrapper
      .profile-menu
        %ul.nav.nav-tabs
          %li{role: "presentation", class: active_link(user_path(@user))}
            = link_to "Feed", @user
          %li{role: "presentation", class: active_link(user_path(@user, tab: :profile))}
            = link_to "Profile Information", [@user, tab: :profile]
          %li{role: "presentation", class: active_link(user_path(@user, tab: :images))}
            = link_to "Images", [@user, tab: :images]

      - if params[:tab] == "images"
        - if @user.images.any?
          .profile-images
            .row
              = render @user.images
        - else
          .default-message
            NO CURRENT IMAGES TO SHOW
      - elsif params[:tab] == "profile"
        .profile-info
          %h5 Location
          %p.text-muted
            = @user.address
          .profile-map
            = image_tag "http://maps.googleapis.com/maps/api/staticmap?center=#{@user.latitude},#{@user.longitude}&zoom=13&scale=false&size=400x200&maptype=roadmap&format=png&visual_refresh=true", class: "img-responsive"

          %h5 Personal information
          .row
            .col-md-2.col-xs-3
              %p
                Gender
              %p
                Birthday
              %p
                Sign in
            .col-md-10.col-xs-9
              %p.text-muted
                = fa_icon("#{@user.gender}", text: @user.gender.capitalize)
              %p.text-muted
                #{@user.birthday.strftime("%d %B %Y")}, #{@user.age}
              %p.text-muted
                #{time_ago_in_words(@user.last_sign_in_at)} ago

          - if @user == current_user
            .profile-config
              %h5
                Settings
                = link_to fa_icon('wrench'), edit_user_registration_path,
                  remote: true, class: "pull-right"
              #profile-settings
                .row
                  .col-md-2.col-xs-3
                    %p
                      Email
                    %p
                      Password
                  .col-md-10.col-xs-9
                    %p.text-muted
                      ******@******.com
                    %p.text-muted
                      **********

      - else
        .profile-feed
          - if @user.posts.any?
            = render @user.posts
          - else
            .default-message
              NO CURRENT ACTIVITY TO SHOW

