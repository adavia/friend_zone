.panel-profile.widget
  .widget-header.bg-purple
  .widget-body.text-center
    = image_tag "/assets/no_user.png", class: "widget-img img-border-light"
    %h4.mar-no
      = user.username.capitalize
    %p.text-muted.mar-btm
      = fa_icon("#{user.gender}", text: "#{user.gender[0].capitalize} - #{user.age}")
    %ul.list-unstyled.text-center.clearfix
      %li.col-xs-4
        %span.text-lg 1,345
        %p.text-muted.text-uppercase
          %small Following
      %li.col-xs-4
        %span.text-lg 23,456
        %p.text-muted.text-uppercase
          %small Followers
      %li.col-xs-4
        %span.text-lg 52,678
        %p.text-muted.text-uppercase
          %small Likes
