= simple_form_for([conversation, Message.new], remote: true) do |f|
  = f.input :body, label: false, wrapper: :vertical_input_group do
    = f.input_field :body, as: :string, class: "form-control input-sm",
      placeholder: "Type your message here..."
    %span.input-group-btn
      = f.button :submit, "Send", class: "btn btn-warning btn-sm"
